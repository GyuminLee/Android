<resources>
    <!-- Resources.getStringArray(id)를 이용해 String[] 로 값을 가져옴. -->
    <string-array name="colors">
        <item>red</item>
        <item>orange</item>
        <item>yellow</item>
        <item>green</item>
        <item>blue</item>
        <item>violet</item>
    </string-array>
    
    <!-- Resources.getIntArray(id)로 int[] 값을 가져옴. -->
    <integer-array name="interval">
        <item >10</item>
        <item >20</item>
        <item >30</item>
    </integer-array>
    
    <!-- Resources.obtainTypedArray(id)로 TypedArray를 얻어와서 getDrawable,getColor등으로 값을 가져옴. -->
    <array name="drawablearray">
        <item>@drawable/red</item>
        <item>@drawable/blue</item>
        <item>@drawable/green</item>
        <item>@drawable/yellow</item>
    </array>
    
    <array name="colorarray">
        <item>#ff0000</item>
        <item>#00ff00</item>
        <item>#0000ff</item>
        <item>#ffff00</item>
    </array>
</resources>
